# GuestList Web Server Container
# Build with: container build -t guestlist-web -f Containerfile .
# Run with: container run -p 8080:8080 --env-file .env guestlist-web

FROM swift:6.2-jammy

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libssl-dev \
    zlib1g-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy package manifests
COPY Package.swift Package.resolved ./

# Resolve dependencies
RUN swift package resolve

# Copy source code
COPY Sources ./Sources
COPY Tests ./Tests

# Build in release mode
RUN swift build -c release --static-swift-stdlib

# Expose HTTP port
EXPOSE 8080

# Run as non-root user
RUN useradd -m -u 1000 guestlist && \
    chown -R guestlist:guestlist /app
USER guestlist

# Set environment defaults
ENV PORT=8080
ENV HOST=0.0.0.0
ENV LOG_LEVEL=info

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the server
CMD [".build/release/Web"]
